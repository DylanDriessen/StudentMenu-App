<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="#00aeff">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/add_menu"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:background="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addMenuName"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/name"
                android:inputType="text"/>

            <!--<EditText
                android:id="@+id/addMenuPrice"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/price"
                android:inputType="numberDecimal"/>-->

            <EditText
                android:id="@+id/addMenuDescription"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="@string/desc"
                android:inputType="text"/>
<!--
            <Spinner
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ingredientDropdown"/>
-->

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:id="@+id/addIngredientToMenu">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/add_ingredient"
                        android:id="@+id/menuAddIngredientName"
                        android:inputType="text"/>
                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:hint="Price"
                        android:id="@+id/menuAddIngredientPrice"
                        android:inputType="numberDecimal"/>

                    <Button
                        android:id="@+id/addIngredientButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:onClick="addMenu"
                android:text="@string/add"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


