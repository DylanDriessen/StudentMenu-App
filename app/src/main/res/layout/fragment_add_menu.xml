<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="490dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#00aeff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="@string/add_menu"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:background="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addMenuName"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/name"
                android:inputType="text" />

            <EditText
                android:id="@+id/addMenuDescription"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="@string/desc"
                android:inputType="text"/>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <EditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_ingredient"
                    android:id="@+id/menuAddIngredientName"
                    android:inputType="text"/>
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/price"
                    android:id="@+id/menuAddIngredientPrice"
                    android:inputType="numberDecimal"/>

                <Button
                    android:id="@+id/addIngredientButton"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/add"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/back_white"/>
            </LinearLayout>



            <ScrollView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/addIngredientToMenu"
                    android:layout_gravity="center_horizontal">


                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:id="@+id/addMenuIngredientColunm"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:id="@+id/addMenuPriceColunm"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:onClick="addMenu"
                android:text="@string/next"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


